{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "display": "React Library",
  "include": ["src"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "outDir": "types",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
